<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sample.kingja.sir"
    android:versionCode="2019071701"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="sample.kingja.pdfsir.SampleApplication"
        android:debuggable="true"
        android:label="@string/app_name"
        android:testOnly="true" >
        <activity
            android:name="sample.kingja.pdfsir.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sample.kingja.pdfsir.AssetOnXMLActivity"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name="sample.kingja.pdfsir.AssetOnSDActivity"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name="sample.kingja.pdfsir.RemotePDFActivity"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name="sample.kingja.pdfsir.ZoomablePDFActivityPhotoView"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar" />
        <activity
            android:name="sample.kingja.pdfsir.PDFWithScaleActivity"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar" />

        <service
            android:name="com.kingja.pdfsir.service.CopyAssetService"
            android:exported="false" >
        </service>
    </application>

</manifest>